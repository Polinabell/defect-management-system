# Пример файла с переменными окружения
# Скопируйте этот файл в .env и заполните своими значениями

# Django settings
SECRET_KEY=your-super-secret-key-here-change-in-production
DEBUG=True
ENVIRONMENT=development
ALLOWED_HOSTS=localhost,127.0.0.1

# Database settings
DB_NAME=defects_db
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=localhost
DB_PORT=5432

# For development you can use SQLite instead
USE_SQLITE=False

# Redis settings
REDIS_URL=redis://localhost:6379/1

# Celery settings
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# CORS settings
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Email settings
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@defects.local

# Sentry (for production)
SENTRY_DSN=

# Backup settings (for production)
BACKUP_DIR=/var/backups/django/
BACKUP_RETENTION_DAYS=30

# Admin URL (for security in production)
ADMIN_URL=admin/
